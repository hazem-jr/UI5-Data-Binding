<mvc:View controllerName="ElementBindingInUI5.controller.MainView" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<layout:VerticalLayout id="i_vlayout" binding="{/People}">
						<Text text="{Id}"></Text>
						<Text text="{Name}"></Text>
						<Text text="{Phone}"></Text>
						<Text text="{Address}"></Text>
					</layout:VerticalLayout>
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>